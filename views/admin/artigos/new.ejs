<%- include ('../../partials/header.ejs'); %>
<body>
    <%- include ('../../partials/navbar.ejs'); %>
   <div class="container mt-4">
    <h1>Novo artigo</h1><hr>
    <div class="card " style="width: 100%;">
        <form action="/artigos/save" method="POST">
            <div class="card-body " style="widows: 95%;"> 
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control" placeholder="Titulo para o novo artigo"><br>
            <textarea name="corpo" class="form-control mt-4" rows="11" id="artigos"
            placeholder="Escreva algo inspirador."></textarea>
            <label class=" mt-2" for="categoria">Categoria:</label>
            <select name="categoria" class="form-control">
                <% categorias.forEach( categoria =>{ %>
                 <option value="<%= categoria.id %>"><%= categoria.titulo %></option>
                <%})%>
            </select>
            <button type="submit" class="btn btn-primary mt-4">Publicar</button>
            </div>
            
        </form>  
    </div>
   </div>
   
</body>
<%- include ('../../partials/footer.ejs'); %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
    language: 'pt_BR',
    selector: '#artigos',
    plugins: [
        'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    ]
   
    
})
</script>
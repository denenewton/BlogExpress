<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbarhome.ejs'); %>
    <div class="jumbotron">
        <div class="row text-center my-1">
            <div class="col-12">
                <h1 class="display-4">Blogg Node.js com Express</h1>
            <hr>
            <h2>Artigos por Categoria</h2>
            </div>
        </div>
    </div>  
    <div class="container w-75" ><!-- style=" background-color: #636363;" -->
        
        <% artigos.forEach( artigo =>{  %>
        <div class="card my-3 ">
            <div class="card-body">
               <h5><%= artigo.titulo %></h5>  
               <a href="/<%= artigo.slug %>">Leia mais</a>
            </div>
        </div>
        <% }) %>  
    </div>
    
</body>
